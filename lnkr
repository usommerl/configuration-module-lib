#!/usr/bin/env bash

# Define method install and use library function link
# to create symlinks to your configuration files.

function install() {
  echo 'Please define install() function'
  echo 'Example:'
  echo '  link file $HOME/file'
}

# Do not alter bootstrap code unless you know what you are doing.
#################################################################################

__url() {
  printf "https://raw.githubusercontent.com/usommerl/configuration-module-lib/v1/$1"
}

__bootstrap() {
  local lnkr_lib=lnkr_lib.sh
  local url=$(__url $lnkr_lib)
  [ ! -e "$lnkr_lib" ] && (curl -O $url || wget $url)
  [ -e "$lnkr_lib" ] && source "$lnkr_lib" "$@"
  echo "Bootstrap failed. Aborting."; exit 1
}
cd $(dirname $(readlink -f "$0")) && __bootstrap "$@"
